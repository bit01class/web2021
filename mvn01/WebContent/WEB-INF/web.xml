<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>mvn01</display-name>
  <welcome-file-list>
    <welcome-file>index.do</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>index</servlet-name>
  	<servlet-class>kr.co.mvc01.controller.IndexController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>deptList</servlet-name>
  	<servlet-class>kr.co.mvc01.controller.DeptListController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>deptAdd</servlet-name>
  	<servlet-class>kr.co.mvc01.controller.DeptAddController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>deptOne</servlet-name>
  	<servlet-class>kr.co.mvc01.controller.DeptOneController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>deptDel</servlet-name>
  	<servlet-class>kr.co.mvc01.controller.DeptDelController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>deptDel</servlet-name>
  	<url-pattern>/delete.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>deptOne</servlet-name>
  	<url-pattern>/one.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>deptAdd</servlet-name>
  	<url-pattern>/add.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>deptList</servlet-name>
  	<url-pattern>/dept.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>index</servlet-name>
  	<url-pattern>/index.do</url-pattern>
  </servlet-mapping>
</web-app>